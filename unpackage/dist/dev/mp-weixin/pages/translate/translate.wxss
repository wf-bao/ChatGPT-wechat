.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.container .img {
  width: 120px;
  height: 120px;
}
.container .tips {
  display: flex;
  opacity: 0.5;
}
.container .tips .iconfont {
  opacity: 1;
  font-size: 40rpx !important;
  margin-right: 10rpx;
  color: #ff6f02;
}
.container .tip_botton {
  display: flex;
  width: 100%;
  margin-top: 40rpx;
}
.container .tip_botton button {
  font-size: 26rpx;
  width: 30%;
  color: orangered;
  border: 1px solid orangered;
}
.container .tip_botton > button:nth-child(2) {
  color: royalblue;
  border: 1px solid royalblue;
}
.container .tip_botton > button:nth-child(3) {
  color: limegreen;
  border: 1px solid limegreen;
}
.container .inp {
  margin-top: 40rpx;
  width: 100%;
  position: relative;
}
.container .inp .font_num {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  opacity: 0.5;
}
.container .btn {
  margin-top: 40rpx;
  border-radius: 0;
  width: 90%;
  background-color: #007aff;
}
.container .is-input-border {
  border-radius: 0;
}
.container .uni-easyinput__content-textarea {
  min-height: 140px;
}
.container .form_essay {
  width: 100%;
}
.container .form_essay .inp_btn {
  margin-top: 40rpx;
}
page {
  background-color: #ececec;
  height: 100%;
}

